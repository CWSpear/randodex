{
  "name": "randodex",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "dev:client": "cd client && vite",
    "build:client": "cd client && npm run type-check:client && npm run build-only:client",
    "preview:client": "cd client && vite preview",
    "test:unit:client": "cd client && vitest --environment jsdom --root ./src/",
    "test:e2e:client": "cd client && playwright test",
    "build-only:client": "cd client && vite build",
    "type-check:client": "cd client && vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint:client": "cd client && eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../.gitignore",
    "prebuild:server": "cd server && rimraf dist",
    "build:server": "cd server && nest build",
    "format:server": "cd server && prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:server": "cd server && nest start",
    "dev:server": "cd server && nest start --watch",
    "debug:server": "cd server && nest start --debug --watch",
    "start:prod:server": "cd server && node dist/main",
    "lint:server": "cd server && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:server": "cd server && jest",
    "test:watch:server": "cd server && jest --watch",
    "test:cov:server": "cd server && jest --coverage",
    "test:debug:server": "cd server && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:server": "cd server && jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/core": "^9.1.6",
    "@nestjs/platform-express": "^9.1.6",
    "@vueform/toggle": "^2.1.2",
    "axios": "^1.1.3",
    "chart.js": "^3.9.1",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "vue": "^3.2.41",
    "vue-chartjs": "^4.1.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.6",
    "@playwright/test": "^1.27.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.0",
    "@types/jsdom": "^20.0.0",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "jest": "29.2.2",
    "jsdom": "^20.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.1",
    "vitest": "^0.24.3",
    "vue-tsc": "^1.0.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server/src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
